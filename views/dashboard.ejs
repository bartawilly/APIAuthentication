<!DOCTYPE html>
<html lang="en">

    <% include partials/header.ejs %>

<body class="">
  <div class="wrapper ">
      <% include partials/sidebar.ejs %>
      <div class="main-panel">
        <!-- Navbar -->
        <% include partials/nav.ejs %>
        <!-- End Navbar -->
        <!-- <div class="panel-header panel-header-sm">
    
    
  </div> -->
        <div class="content">
            <% if (errorMsg) { %>
              <div class="alert alert-danger"><%= errorMsg %></div>
          <% } %>
          <div class="row">

                <div class="col-md-4">
                  <div class="card card-stats">
                    <div class="card-body ">
                      <div class="row">
                        <div class="col-md-4">
                          <div class="icon-big text-center icon-warning">
                            <i class="nc-icon nc-money-coins text-success"></i>
                          </div>
                        </div>
                        <div class="col-md-8">
                          <div class="numbers">
                            <p class="card-category">Daily Total Income</p>
                            <% if (report.totalFinalAmounts) { %>
                                <p class="card-title"> <%= report.totalFinalAmounts %><p>
                            <% } else {%>
                                <p class="card-title"> 0 <p>
                            <% }%>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="card-footer ">
                      <hr>
                      <div class="stats">
                            <i class="fa fa-refresh"></i> Update now
                      </div>
                    </div>
                  </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card card-stats">
                        <div class="card-body ">
                        <div class="row">
                            <div class="col-md-4">
                            <div class="icon-big text-center icon-warning">
                                <i class="nc-icon nc-money-coins text-success"></i>
                            </div>
                            </div>
                            <div class="col-md-8">
                            <div class="numbers">
                                <p class="card-category">Daily Total Expenses</p>
                                <% if (report.totalExpenses) { %>
                                <p class="card-title"> <%= report.totalExpenses %><p>
                                <% } else {%>
                                    <p class="card-title"> 0 <p>
                                <% }%>
                            </div>
                            </div>
                        </div>
                        </div>
                        <div class="card-footer ">
                        <hr>
                        <div class="stats">
                                <i class="fa fa-refresh"></i> Update now
                        </div>
                        </div>
                    </div>
                </div>


                <div class="col-md-4">
                    <div class="card card-stats">
                        <div class="card-body ">
                        <div class="row">
                            <div class="col-md-4">
                            <div class="icon-big text-center icon-warning">
                                <i class="nc-icon nc-money-coins text-success"></i>
                            </div>
                            </div>
                            <div class="col-md-8">
                            <div class="numbers">
                                <p class="card-category">Daily Net Revenue</p>
                                <% if (report.netRevenue) { %>
                                <p class="card-title"> <%= report.netRevenue %><p>
                                <% } else {%>
                                    <p class="card-title"> 0 <p>
                                <% }%>
                            </div>
                            </div>
                        </div>
                        </div>
                        <div class="card-footer ">
                        <hr>
                        <div class="stats">
                                <i class="fa fa-refresh"></i> Update now
                        </div>
                        </div>
                    </div>
                </div>

              </div>

              <div class="row">
                  <div class="col-md-12">
                      <div class="card">
                          <div class="card-header">
                              <h4 class="card-title">Reorder Items Table</h4>
                          </div>
    
                          <div class="card-body">
                              <div class="table-responsive">
                                  <table class="table">
                                      <thead class=" text-primary">
                                        <th>Code</th>
                                        <th>Name</th>
                                        <th>Cost</th>
                                        <th>Quantity</th>
                                        <th></th>
                                      </thead>
                                      <tbody>
                                      <% if (reorderItems) { %>
                                      <% for (var i =0; i<reorderItems.length;i++ ) { %>
                                        <tr>
                                          <td><%=reorderItems[i].code%></td>
                                          <td><%=reorderItems[i].name%></td>
                                          <td><%=reorderItems[i].cost%></td>
                                          <td><%=reorderItems[i].quantity%></td>
                                          <td>
                                              <a data-toggle="modal" data-target="#reorderItem" onclick="reorderItemModal(`<%=reorderItemsProviders[i].name%>`,`<%=reorderItemsProviders[i].address%>`,`<%=reorderItemsProviders[i].phone%>`,`<%=reorderItemsProviders[i].email%>`)" ><button class="btn btn-primary btn-round">Reorder</button></a>
                                          </td>
                                        </tr>
                                        <% } %>
                                        <% } %>
                                      </tbody>
                                  </table>
                              </div>
                          </div>
    
                      </div>
                  </div>
              </div>
    
              <!--   *****************Edit Category Modal******************        -->
              <div class="modal fade" id="reorderItem" role="dialog">
                  <div class="modal-dialog modal-lg">
                      <div class="modal-content text-left">
                          <div class="modal-header">
                              <button type="button" class="close" data-dismiss="modal">&times;</button>
                              <h4 class="modal-title">Reorder Item: Provider</h4>
                          </div>
                          <div class="modal-body">
                              <form method="" action="" name="reodrerItemProvider" id="reodrerItemProviderForm">
                                  <div class="row">
                                      <div class="col-md-12">
                                          <div class="form-group">
                                              <label>Name</label>
                                              <input type="text" class="form-control border-input" name="name">
                                          </div>
                                      </div>
                                  </div>
                                  <div class="row">
                                      <div class="col-md-12">
                                          <div class="form-group">
                                            <label>Address</label>
                                            <input type="text" class="form-control border-input" name="address">
                                          </div>
                                      </div>
                                  </div>
                                  <div class="row">
                                      <div class="col-md-12">
                                          <div class="form-group">
                                            <label>Phone</label>
                                            <input type="text" class="form-control border-input" name="phone">
                                          </div>
                                      </div>
                                  </div>
                                  <div class="row">
                                      <div class="col-md-12">
                                          <div class="form-group">
                                            <label>Email</label>
                                            <input type="text" class="form-control border-input" name="email">
                                          </div>
                                      </div>
                                  </div>
                                  <div class="clearfix"></div>
                              </form>
                          </div>
                      </div>
                  </div>
              </div>


    
        <% include partials/footer.ejs %>
      </div>
    </div>
  </div>
  <% include partials/scripts.ejs %>
 <script>
   function reorderItemModal(name, address, phone, email){
   
   let form = document.forms['reodrerItemProviderForm'];
   form.elements["name"].value = name;
   form.elements["address"].value = address;
   form.elements["phone"].value = phone;
   form.elements["email"].value = email;
 
 };
 </script>
</body>

</html>